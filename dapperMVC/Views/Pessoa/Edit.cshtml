@model dapperMVC.Models.Pessoas

@{
    ViewData["Title"] = "Atualizar" + Model.nome_pessoa;
}


<h4 class="alert alert-secondary">Atualizar @Model.nome_pessoa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="id_pessoa" type="hidden" />
            <div class="form-group">
                <label asp-for="nome_pessoa" class="control-label"></label>
                <input asp-for="nome_pessoa" class="form-control" />
                <span asp-validation-for="nome_pessoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefone_pessoa" class="control-label"></label>
                <input asp-for="telefone_pessoa" class="form-control" />
                <span asp-validation-for="telefone_pessoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cpf_pessoa" class="control-label"></label>
                <input asp-for="cpf_pessoa" class="form-control" />
                <span asp-validation-for="cpf_pessoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Alualizar" class="btn btn-outline-primary btn-sm" /> &emsp;
                <a asp-action="Index" class="btn btn-link btn-sm">Voltar</a>
            </div>
        </form>
    </div>
</div>

